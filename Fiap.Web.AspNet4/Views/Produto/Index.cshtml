@model IList<ProdutoModel>

<h1>Produtos</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Produto
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.ProdutoId
                </td>
                <td>
                    @item.ProdutoNome
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.ProdutoId">Detalhes</a>
                </td>
            </tr>
        }
    </tbody>
</table>
