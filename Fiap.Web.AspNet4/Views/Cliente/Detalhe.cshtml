@model ClienteModel

@{
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="well">
                <h2>Cliente - Detalhe</h2>

                <form asp-action="Editar" method="post">
                    <input type="hidden" name="ClienteId" value="@Model.ClienteId" />
                    <div class="form-group">
                        <label class="control-label">Nome:</label>
                        <label class="col-form-label-lg">@Model.Nome</label>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Email:</label>
                        <label class="col-form-label-lg">@Model.Email</label>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Representante:</label>
                        <label class="col-form-label-lg">@Model.Representante.NomeRepresentante</label>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Data Nascimento:</label>
                        <label class="col-form-label-lg">@Model.DataNascimento</label>
                    </div>

                    <div class="form-group">
                        <label class="control-label">Observação:</label>
                        <label class="col-form-label-lg">@Model.Observacao</label>
                    </div>

                    <a asp-action="Index" class="btn btn-outline-primary btn-lg">Voltar</a>
                </form>
            </div>
        </div>
    </div>
</div>